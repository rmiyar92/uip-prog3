#Declaracion de  variables
 B = 5  
 H = 7  

 Area = B * H
 Perimetro =  (2*B) + 2*H
 pulga = Area / 2.54
 metroa = Area / 100
 pulgp =  Perimetro / 2.54
 metrop = Perimetro / 100


 print("El perimetro es"+str(Perimetro))
 print("El area es"+str(Area))
 print("El perimetro es ="+str(pulgp)+"tpulgadas")
 print("El perimetro es ="+str(metrop)+"metros")
 print("El Area es ="+str(pulga)+" pulgadas")
 print("El Area es ="+str(metroa)+" metros")
